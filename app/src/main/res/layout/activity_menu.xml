<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sharedpreferences.menuactivity.MenuActivity">

    <Button
        android:id="@+id/btSp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Shared Preferences"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <Button
        android:id="@+id/btFechar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Fechar"
        app:layout_constraintEnd_toEndOf="@+id/btBanco"
        app:layout_constraintStart_toStartOf="@+id/btBanco"
        app:layout_constraintTop_toBottomOf="@+id/btBanco" />

    <Button
        android:id="@+id/btBanco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Banco de Dados"
        app:layout_constraintEnd_toEndOf="@+id/btSp"
        app:layout_constraintStart_toStartOf="@+id/btSp"
        app:layout_constraintTop_toBottomOf="@+id/btSp" />

</androidx.constraintlayout.widget.ConstraintLayout>